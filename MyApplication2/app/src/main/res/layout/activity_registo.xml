<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-54dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView

                android:id="@+id/registo"
                android:layout_width="413dp"
                android:layout_height="51dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="#E84424"
                android:gravity="center"
                android:text="Registo"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/nome"
                android:layout_width="51dp"
                android:layout_height="45dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="52dp"
                android:gravity="center"
                android:text="Nome"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registo" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="52dp"
                android:ems="10"
                android:hint="Name "
                android:inputType="textPersonName"
                android:maxLength="100"
                app:layout_constraintStart_toEndOf="@+id/nome"
                app:layout_constraintTop_toBottomOf="@+id/registo" />

            <com.wafflecopter.charcounttextview.CharCountTextView
                android:id="@+id/nomeCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.896"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editName"
                app:maxCharacters="70" />


            <TextView
                android:id="@+id/telefone"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="56dp"
                android:gravity="center"
                android:text="Telefone"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nome" />

            <EditText
                android:id="@+id/editTlf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="41dp"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="56dp"
                android:ems="10"
                android:hint="Telefone "
                android:maxLength="9"
                android:inputType="phone"
                app:layout_constraintStart_toEndOf="@+id/telefone"
                app:layout_constraintTop_toBottomOf="@+id/editName" />

            <com.wafflecopter.charcounttextview.CharCountTextView
                android:id="@+id/tlfCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.896"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTlf"
                app:maxCharacters="9" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="56dp"
                android:gravity="center"
                android:text="Email"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/telefone" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="67dp"
                android:layout_marginLeft="67dp"
                android:layout_marginTop="56dp"
                android:ems="10"
                android:hint="Email "
                android:maxLength="100"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toEndOf="@+id/email"
                app:layout_constraintTop_toBottomOf="@+id/editTlf" />

            <com.wafflecopter.charcounttextview.CharCountTextView
                android:id="@+id/emailCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.896"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editEmail"
                app:maxCharacters="100" />

            <TextView
                android:id="@+id/CC"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="56dp"
                android:gravity="start"
                android:text="Cartão Cidadão"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <EditText
                android:id="@+id/editCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:layout_marginStart="31dp"
                android:layout_marginLeft="31dp"
                android:ems="10"
                android:hint="Cartão Cidadão "
                android:maxLength="12"
                android:inputType="none"
                app:layout_constraintStart_toEndOf="@+id/CC"
                app:layout_constraintTop_toBottomOf="@+id/editEmail" />

            <com.wafflecopter.charcounttextview.CharCountTextView
                android:id="@+id/ccCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.896"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editCC"
                app:maxCharacters="12" />

            <TextView
                android:id="@+id/NIF"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="56dp"
                android:gravity="center"
                android:text="NIF"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CC" />

            <EditText
                android:id="@+id/editNIF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="83dp"
                android:layout_marginLeft="83dp"
                android:ems="10"
                android:layout_marginTop="56dp"
                android:hint="NIF "
                android:maxLength="9"
                android:inputType="number"
                app:layout_constraintStart_toEndOf="@+id/NIF"
                app:layout_constraintTop_toBottomOf="@+id/editCC" />

            <com.wafflecopter.charcounttextview.CharCountTextView
                android:id="@+id/nifCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.896"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editNIF"
                app:maxCharacters="9" />



            <TextView
                android:id="@+id/Morada"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="56dp"
                android:gravity="center"
                android:text="Morada"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NIF" />


            <EditText
                android:id="@+id/editMorada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="49dp"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="56dp"
                android:ems="10"
                android:hint="Morada "
                android:maxLength="200"
                android:inputType="textPostalAddress"
                app:layout_constraintStart_toEndOf="@+id/Morada"
                app:layout_constraintTop_toBottomOf="@+id/editNIF" />

            <com.wafflecopter.charcounttextview.CharCountTextView
                android:id="@+id/moradaCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.896"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editMorada"
                app:maxCharacters="200" />


            <TextView
                android:id="@+id/dataNasc"
                android:layout_width="101dp"
                android:layout_height="45dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="56dp"
                android:gravity="start"
                android:text="Data Nascimento"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Morada" />


            <EditText
                android:id="@+id/editDataNasc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="56dp"
                android:ems="10"
                android:hint="Data de Nascimento"
                android:inputType="none"
                android:focusable="false"
                app:layout_constraintStart_toEndOf="@+id/dataNasc"
                app:layout_constraintTop_toBottomOf="@+id/editMorada" />



            <TextView
                android:id="@+id/Password"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="Password"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dataNasc" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:ems="10"
                android:layout_marginTop="56dp"
                android:hint="Password"
                android:maxLength="100"
                android:inputType="textVisiblePassword"
                app:layout_constraintStart_toEndOf="@+id/Password"
                app:layout_constraintTop_toBottomOf="@+id/editDataNasc" />

            <com.wafflecopter.charcounttextview.CharCountTextView
                android:id="@+id/passCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.896"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editPassword"
                app:maxCharacters="100" />


            <TextView
                android:id="@+id/estadoCivil"
                android:layout_width="75dp"
                android:layout_height="43dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="56dp"
                android:text="Estado Civil"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Password"
                android:gravity="start"/>




            <Spinner
                android:id="@+id/editEstadoCivil"
                android:layout_width="213dp"
                android:layout_height="45dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="56dp"
                android:backgroundTint="#E84424"
                android:ems="10"
                android:hint="Estado Cvil"
                android:inputType="textPersonName"
                app:layout_constraintStart_toEndOf="@+id/estadoCivil"
                app:layout_constraintTop_toBottomOf="@+id/editPassword" />

            <TextView
                android:id="@+id/genero"
                android:layout_width="61dp"
                android:layout_height="45dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="56dp"
                android:gravity="center"
                android:text="Género"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/estadoCivil" />

            <Spinner
                android:id="@+id/editGenero"
                android:layout_width="213dp"
                android:layout_height="45dp"
                android:layout_marginStart="49dp"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="56dp"
                android:ems="10"
                android:hint="Género"
                android:inputType="none"
                app:layout_constraintStart_toEndOf="@+id/genero"
                app:layout_constraintTop_toBottomOf="@+id/editEstadoCivil"
                android:backgroundTint="#E84424"/>

            <TextView
                android:id="@+id/animais"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="56dp"
                android:gravity="center"
                android:text="Animais"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/genero" />

            <RadioGroup
                android:id="@+id/radio_animais"
                android:layout_width="142dp"
                android:layout_height="32dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="62dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/animais"
                app:layout_constraintTop_toBottomOf="@+id/editGenero">

                <RadioButton
                    android:id="@+id/radiosim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:text="sim"
                    android:textSize="14dp" />

                <RadioButton

                    android:id="@+id/radionao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nao"
                    android:textSize="14dp" />
            </RadioGroup>


            <CheckBox
                android:id="@+id/termos"
                android:layout_width="34dp"
                android:layout_height="47dp"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"

                android:layout_marginTop="52dp"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radio_animais" />


            <TextView
                android:id="@+id/termosView"
                android:layout_width="285dp"
                android:layout_height="47dp"
                android:layout_marginTop="56dp"
                android:text="Aceito os Termos e Condições no uso desta aplicação"
                android:textColor="#0000FF"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@+id/termos"
                app:layout_constraintTop_toBottomOf="@+id/radio_animais" />

            <Button
                android:id="@+id/button_registar"
                android:layout_width="251dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_registo"
                android:text="REGISTAR"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:onClick="continuar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.534"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/termosView" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>