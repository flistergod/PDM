<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/texto_alt_pass"
        android:layout_width="269dp"

        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="Digite  a sua password atual duas vezes e de seguida insira a sua nova password.\n\n"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pass_atual"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="Password"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto_alt_pass" />

    <EditText
        android:id="@+id/edit_pass_atual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:ems="10"
        android:hint="Password atual "
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toEndOf="@+id/pass_atual"
        app:layout_constraintTop_toBottomOf="@+id/texto_alt_pass" />

    <TextView
        android:id="@+id/nova_pass"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="Nova\nPassword"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass_atual"
         />

    <EditText
        android:id="@+id/edit_nova_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Nova Password"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toEndOf="@+id/nova_pass"
        app:layout_constraintTop_toBottomOf="@+id/edit_pass_atual" />

    <TextView
        android:id="@+id/nova_pass_rep"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="Nova\nPassword"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nova_pass" />

    <EditText
        android:id="@+id/edit_nova_pass_rep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Nova Password"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toEndOf="@+id/nova_pass_rep"
        app:layout_constraintTop_toBottomOf="@+id/edit_nova_pass" />


</androidx.constraintlayout.widget.ConstraintLayout>